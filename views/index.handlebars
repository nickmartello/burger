<h1 class="text-center">Burger</h1>
<hr>

<div class="row">

  <div class="col-sm-6">

    <h2 class="text-center">New Burgers</h2>

    <ul>
      {{#each burgers}}
      {{#unless eaten}}
      {{> burgers/burger-block eat=true}}
      {{/unless}}
      {{/each}}
    </ul>

  </div>

  <div class="col-sm-6">

    <h2 class="text-center">Burgers that have been eaten!</h2>

    <ul>
      {{#each burgers}}
      {{#if eaten}}
      {{> burgers/burger-block eat=false}}
      {{/if}}
      {{/each}}
    </ul>

  </div>

</div>

<hr>


<div class="row text-center">

  <div class="col-sm">

<h2>Add a new burger to the menu</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">Have you eaten this burger before?</label><br>
    <input type="radio" name="eaten" value="1" checked> Yes!<br>
    <input type="radio" name="eaten" value="0"> Not Yet
  </div>

  <button type="submit">Add Burger</button>
</form>

  </div>

</div>